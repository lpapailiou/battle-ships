<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/introF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.IntroModel">
    tools:context=".refactored.ui.main.IntroFragment">


    <pl.droidsonroids.gif.GifImageView
        android:adjustViewBounds="true"
        android:contentDescription="@string/Intro"
        android:id="@+id/intro_image"
        android:layout_height="184dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="103dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="60dp"
        android:layout_width="199dp"
        android:scaleType="centerInside"
        android:src="@drawable/splash"
        app:layout_constraintBottom_toTopOf="@id/start_game_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ch.ffhs.esa.battleships.ui.main.StartGameFragment
        android:id="@+id/start_game_fragment"
        android:name="ch.ffhs.esa.battleships.ui.main.StartGameFragment"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <ch.ffhs.esa.battleships.ui.main.MainFragment
        android:id="@+id/login"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:name="battleships.esa.ffhs.ch.refactored.ui.main.MainFragment"
        app:layout_constraintBottom_toTopOf="@id/start_game_fragment"
        app:layout_constraintTop_toBottomOf="@id/gif_intro_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="128dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />



</androidx.constraintlayout.widget.ConstraintLayout>
