<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bridge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.BridgeFragment">

    <fragment
        android:id="@+id/gif_bridge_container"
        android:name="battleships.esa.ffhs.ch.ui.main.GifFragment"
        android:layout_width="206dp"
        android:layout_height="244dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/listId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- start game button missing here -->

    <ListView
        android:id="@+id/listId"
        android:layout_width="295dp"
        android:layout_height="304dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gif_bridge_container" />


</androidx.constraintlayout.widget.ConstraintLayout>
